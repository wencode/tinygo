{
	"llvm-target":   "wasm32--wasi",
	"build-tags":    ["wasm", "wasi"],
	"goos":          "linux",
	"goarch":        "arm",
	"compiler":      "clang",
	"linker":        "wasm-ld",
	"libc":          "wasi-libc",
	"cflags": [
		"--target=wasm32--wasi",
		"--sysroot={root}/lib/wasi-libc/sysroot",
		"-Oz"
	],
	"ldflags": [
		"--allow-undefined",
		"--stack-first",
		"--export-dynamic",
		"--no-demangle"
	],
	"emulator":      ["wasmtime"],
	"wasm-abi":      "generic"
}
